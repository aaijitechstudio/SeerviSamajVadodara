rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user exists and is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner of document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();

      // Allow create if authenticated and creating own document (during sign-up)
      allow create: if isAuthenticated() &&
                     isOwner(userId) &&
                     request.resource.data.keys().hasAll(['name', 'email', 'phone', 'createdAt', 'isVerified', 'isActive', 'role']);

      // Allow update if:
      // - User is updating their own document, OR
      // - User is admin (for verifying users, etc.)
      allow update: if isAuthenticated() &&
                     (isOwner(userId) || isAdmin());

      // Allow delete if:
      // - User is deleting their own document, OR
      // - User is admin
      allow delete: if isAuthenticated() &&
                     (isOwner(userId) || isAdmin());
    }

    // ============================================
    // POSTS COLLECTION
    // ============================================
    match /posts/{postId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();

      // Allow create if authenticated
      allow create: if isAuthenticated() &&
                     request.resource.data.authorId == request.auth.uid;

      // Allow update if:
      // - User is the author (for editing content), OR
      // - User is updating likes (any authenticated user can like), OR
      // - User is admin
      allow update: if isAuthenticated() &&
                     (resource.data.authorId == request.auth.uid ||
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'likesCount']) ||
                      isAdmin());

      // Allow delete if:
      // - User is the author, OR
      // - User is admin
      allow delete: if isAuthenticated() &&
                     (resource.data.authorId == request.auth.uid || isAdmin());
    }

    // ============================================
    // EVENTS COLLECTION
    // ============================================
    match /events/{eventId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();

      // Allow create only if admin
      allow create: if isAdmin();

      // Allow update only if admin
      allow update: if isAdmin();

      // Allow delete only if admin
      allow delete: if isAdmin();
    }

    // ============================================
    // ANNOUNCEMENTS COLLECTION
    // ============================================
    match /announcements/{announcementId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();

      // Allow create only if admin
      allow create: if isAdmin();

      // Allow update only if admin
      allow update: if isAdmin();

      // Allow delete only if admin
      allow delete: if isAdmin();
    }

    // ============================================
    // COMMITTEE COLLECTION
    // ============================================
    match /committee/{memberId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();

      // Allow create if admin
      allow create: if isAdmin();

      // Allow update if admin
      allow update: if isAdmin();

      // Allow delete if admin
      allow delete: if isAdmin();
    }
  }
}
